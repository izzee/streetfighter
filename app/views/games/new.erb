
<%= form_for @game do |f| %>

  <%= f.label "Choose your fighter: "%>
  <%= f.collection_select :player_character_id, Character.all, :id, :name %><br>

  <%= f.label "Choose your opponent: "%>
  <%= f.collection_select :enemy_character_id, Character.all, :id, :name %><br>

  <%= f.submit "Begin Fight!" %>

<% end %>
